- if @count > 0
  Displaying
  = @page > 1 ? ((@page-1)*@per_page)+1 : 1
  = "-" 
  = (@page*@per_page) > @count ? @count : @page*@per_page
  of 
  = @count
  total jobs
- else
  No jobs found
  
- if @squery and @query
  for
  %span.quiet.underline
    = "#{@squery}"
- elsif @query
  for
  %span.quiet.underline
    = "#{@query}"